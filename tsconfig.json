{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./build",
    "module": "commonjs",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
  }
}
